    }

        .searchSelect:focus {
            border-color: #C6414C;
        }

    .searchButton {
        background-color: #C6414C;
        width: 100%;
        border: none;
        box-shadow: none;
        font-size: 14px;
        padding: 10px 15px;
        color: #fff;
        outline: none;
    }

        .searchButton:hover {
            background-color: #B30513;
        }
</style>

