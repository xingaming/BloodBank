
@{
    ViewData["Title"] = "LifeSaving";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="lifeSaving" class="lifeSaving">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Life Saving Contact</h2>
        </div>

        <div class="container">
            <!-- Start Row -->

            <div class="row">
                
                @foreach (var item in ViewBag.ListLifeSaving)
                {
                    <!-- Start Col -->
                    <div class="col-sm-12 col-lg-6 mb-4">
                        <!-- Start Card -->
                        <div class="card mb-3 shadow-lg border border-1 border-light" style="max-width: 550px;">
                            <div class="row g-0">
                                <div class="col-md-4 col-sm-12 border border-4 rounded-start border-opacity-90 border-end-0 border-danger">
                                    <img src="~/assets/img/LifeSaving/1.jfif" class="img-fluid rounded-start" style="height: 270px;" alt="...">
                                </div>
                                <div class="col-md-8 col-sm-12 ">
                                    <div class="card-body mt-2">
                                        <i class="fas fa-map-marker-alt"></i> <small>@item.City</small>
                                        <h5 class="card-title text-secondary"> @item.Name </h5>
                                        <br>
                                        <h6 class="text-primary">Contact Infomation</h6>
                                        <i class="fas fa-phone"></i> <small>Number : </small> <span class="lead">@item.ContactNumber</span> <br>
                                        <i class="fas fa-envelope"></i> <small>Email : </small> <span class="lead">@item.Email</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Card -->
                    </div>
                    <!-- End Col -->
                }

            </div>
            <!-- End Row-->
        </div>
    </div>
</section><!-- End Appointment Section -->
