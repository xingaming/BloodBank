
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- ======= Appointment Section ======= -->
<section id="appointment" class="appointment section-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Change Password</h2>
        </div>
        @if (TempData["message"] != null)
        {
            @*<script>alert('@TempData["message"]');</script>*@
            <div style="text-align: center;">
                <span style="color: red">@TempData["message"]</span><br><br>
            </div>
        }
        @if (TempData["message2"] != null)
        {
            @*<script>alert('@TempData["message"]');</script>*@
            <div style="text-align: center;">
                <span style="color: limegreen">@TempData["message2"]</span><br><br>
            </div>
        }
        <form asp-action="changePassword" method="POST" data-aos="fade-up" data-aos-delay="100">
            <div class="row col-md-4" style="display: block; margin-left: auto; margin-right:auto;">
                <div class="col-md-12 form-group">
                    <input type="text" name="old" placeholder="Old password" required>
                </div> 
                <div class=" form-group mt-3">
                    <input type="text" name="newP" placeholder="New Password" required>
                </div>
                <div class=" form-group mt-3">
                    <input type="text" name="confirm" placeholder="Confirm password" required>
                </div>
            </div>
            <div class="text-center">
                <br />
                <a class="loginC" asp-action="Index" asp-controller="Donor" asp-route-id="@ViewBag.Id">Back</a>
                <button class="regis" type="submit" value="Change">Change</button>   
            </div>
        </form>

    </div>
</section><!-- End Appointment Section -->

<style>
    .loginC {
        background: #C6414C;
        border: 0;
        padding: 10px 35px;
        color: #fff;
        transition: 0.4s;
        border-radius: 50px;
    }

        .loginC:hover {
            color: #fff;
            background: #B30513;
        }

    input {
        width: 100%;
        border: 1px solid;
        border-color: #CED4DA;
        box-shadow: none;
        font-size: 14px;
        padding: 10px 15px;
        outline: none;
        border-radius: 20px;
    }

        input:focus {
            border-color: #C6414C;
        }

    .sele {
        width: 100%;
        border: 1px solid;
        border-color: #CED4DA;
        box-shadow: none;
        font-size: 14px;
        padding: 10px 15px;
        outline: none;
        border-radius: 100px;
    }

        .sele:focus {
            border-color: #C6414C;
        }

    .regis {
        background: #C6414C;
        border: 0;
        padding: 10px 35px;
        color: #fff;
        transition: 0.4s;
        border-radius: 50px;
    }

        .regis:hover {
            background: #B30513;
        }
</style>

